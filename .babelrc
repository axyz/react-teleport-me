{
    "presets": [
        "es2015",
        "react",
        "stage-1"
    ],
    "plugins": [
        "transform-remove-strict-mode",
        "transform-decorators-legacy"
    ],
    "env": {
        "development": {
            "development": ["react-transform"],
            "extra": {
                "react-transform": {
                    "transforms": [{
                        "transform": "react-transform-hmr",
                        "imports": ["react"],
                        "locals": ["module"]
                    }]
                }
            }
        }
    }
}